<p id="notice"><%= notice %></p>

<h1>Found item Forum</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Types</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.types %></td>
        <td><%= post.user.email.split('@')[0].capitalize %></td>
        <td><%= post.stat %></td>
        
        <td><%= link_to 'more details', post %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new found items', new_post_path %> |
